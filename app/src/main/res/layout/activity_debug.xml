<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/activity_debug"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.gmail.meeyeer.viinceent.androidsandbox.debug.DebugActivity"
        app:layout_behavior="com.gmail.meeyeer.viinceent.androidsandbox.RelativeLayoutBehavior">

        <fragment
            android:id="@+id/debug_fragment"
            android:name="com.gmail.meeyeer.viinceent.androidsandbox.debug.DebugFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_debug" />

    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>